<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#09C0FA"
    app:cardElevation="2dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/image_task"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_task_completed"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/text_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image_task"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Belajar Kotlin" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:drawablePadding="2dp"
            android:drawableTint="@android:color/white"
            android:fontFamily="@font/inter"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:drawableStartCompat="@drawable/ic_date_small"
            app:layout_constraintStart_toStartOf="@+id/text_task"
            app:layout_constraintTop_toBottomOf="@+id/text_task"
            tools:ignore="SmallSp"
            tools:text="12/15/2022" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>